<div class="form">
  <%= form_for account, url: {action: account.persisted? ? "update" : "create"} do |f| %>
      <div class="form-group">
        <label>
          <%= t("user.account.model.name") %>
        </label>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <% if account.new_record? %>
          <div class="form-group">
            <label>
              <%= t("user.account.model.currency") %>
            </label>
            <%= f.select :currency, ["USD", "CRC"], {}, {:class => "form-control"} %>
          </div>
          <div class="form-group">
            <label>
              <%= t("user.account.model.current_balance") %>
            </label>
            <%= f.number_field :current_balance, class: "form-control" %>
          </div>
      <% end %>
      <%= link_to t("form.cancel"), accounts_path, class: "btn" %>
      <%= f.submit account.persisted? ? t('form.update') : t('form.create'), :class => "btn btn-default" %>
  <% end %>
</div>