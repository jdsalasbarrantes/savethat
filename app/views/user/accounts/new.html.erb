<% provide(:title, t("user.account.new.title")) %>

<h1>
  <%= t("user.account.new.title") %>
</h1>

<div class="form">
  <%= form_for @account, url: {action: "create"} do |f| %>
    <div class="form-group">
      <label>
        <%= t("user.account.model.name") %>
      </label>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <label>
        <%= t("user.account.model.current_balance") %>
      </label>
      <%= f.number_field :current_balance, class: "form-control" %>
    </div>
    <%= link_to t("form.cancel"), accounts_path, class: "btn" %>
    <%= f.submit t('form.create') %>
  <% end %>
</div>